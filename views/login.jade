extends layout

block body
  .container
    .row
      .col-sm-6.col-md-4.col-md-offset-4
        h1.text-center.login-title Sign in to continue to TT App
        .account-wall
          img.profile-img(src='/images/thetatau.png', alt='')
          form.form-signin(action='/login', method='post')
            .form-group
              input#login_username.form-control(type='text', placeholder='Username', name='username', required='required', autofocus='autofocus')
            .form-group
              input#login_password.form-control(type='password', placeholder='Password', name='password', required='required')
            button.btn.btn-lg.btn-primary.btn-block(type='submit')
              | Sign in

  script(src='https://code.jquery.com/jquery.js')
  script(src='/js/bootstrap.min.js')
  script(src='/js/bootstrap.js')
  script(src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.20/angular.js')
  script(src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.20/angular-route.js')
  script(src='/js/app.js')
  script(src='/js/services/sampleService.js')
  script(src='/js/controllers/sampleController.js')
  script(src='/js/filters/sampleFilter.js')
  script(src='/js/directives/sampleDirective.js')