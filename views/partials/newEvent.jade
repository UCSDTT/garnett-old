.container

  .page-header
    .row
      .col-xs-3
        h1#timeline New Event
      .col-xs-3
        a(href='/timeline' title="Cancel New Event Creation")
          .glyphicon.page_header_btn.glyphicon-remove
  if errors
    each error in errors
      div.alert.alert-danger
        span #{error.error}
  if saved
    div.alert.alert-success
      span Your profile has been saved
  form.login-form.form-horizontal(method='post', role='form', action='/event/add')
    input(name='_csrf', type='hidden', value=csrfToken)

    div.form-group
      label.col-sm-4 Event Name
      div.col-sm-8
        input.form-control(
          placeholder='Enter event name',
          required=true,
          name='eventName',
          type='text',
          value=eventName)
    div.form-group
      label.col-sm-4 Event Date
      div.col-sm-8
        input.form-control(placeholder='Enter Event Date',
          required=true,
          name='date',
          type='text',
          value=date)
    div.form-group
      label.col-sm-4 Event Description
      div.col-sm-8
        textarea.form-control(
          placeholder='Enter Description Here...',
          rows='6',
          required=true,
          name='description'
          value=description
        )
    div.form-group
      div.col-sm-offset-4.col-sm-8
        button.login.btn.btn-primary(type='submit' value='save') Create